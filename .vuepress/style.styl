@import url('https://fonts.googleapis.com/css?family=Asap:400,600,700');
h1 {
	font-family: "Asap";
	font-weight: 700;
	font-size: 4rem;
	color: #003bff
}
h2,{
	font-family: "Asap";
	font-weight: 700;
	font-size: 2.5rem;
	color: #003bff;
}
h3,
h4,
h5,
h6 {
	font-family: "Asap";
	font-weight: 700;
	color: #003bff;
}

.custom-block {
	border-color: #003BFF !important;
	border-radius: 4px;
	box-shadow: 1px 5px 10px rgba(0, 59, 255, 0.1);
	background-color: #f9f9f9 !important;
}

.text-grey {
	color: grey;
}

.italic {
	font-style: italic;
}

.text-center {
	text-align: center;	
}

.border-none {
	border: none;	
}